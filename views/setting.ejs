<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setting Account</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header class="sticky-top">
        <%- include('components/nav.ejs') %>
    </header>
    <div class="mainBody">
        <%- include('components/sidebar.ejs') %>
        <main>
            <% if (typeof user !== "undefined") { %>
                <h1 class="text-center">Setting Account</h1>
                <hr>
                <!-- Form 1 -->
                <form class="mb-3 change-form" action="changeName" method="post">
                    <h4>Change Name</h4>
                    <input 
                        type="text" 
                        name="name" 
                        class="form-control input-field" 
                        placeholder="Enter your new name" 
                        required>
                    <button 
                        type="submit" 
                        class="btn btn-success mt-2 save-button" 
                        disabled>
                        Save
                    </button>
                </form>
                <!-- Form 2 -->
                <form class="change-form" action="changeUsername" method="post">
                    <h4>Change Username</h4>
                    <input 
                        type="password" 
                        name="password" 
                        class="form-control mb-2 input-field" 
                        placeholder="Enter your password" 
                        required>
                    <input 
                        type="text" 
                        name="username" 
                        class="form-control input-field" 
                        placeholder="Enter your new username" 
                        required>
                    <button 
                        type="submit" 
                        class="btn btn-success mt-2 save-button" 
                        disabled>
                        Save
                    </button>
                </form>
                <!-- Form 3 -->
                <form class="change-form" action="changeEmail" method="post">
                    <h4>Change Email</h4>
                    <input 
                        type="password" 
                        name="password" 
                        class="form-control mb-2 input-field" 
                        placeholder="Enter your password" 
                        required>
                    <input 
                        type="email" 
                        name="Nemail" 
                        class="form-control input-field" 
                        placeholder="Enter your new email" 
                        required>
                    <button 
                        type="submit" 
                        class="btn btn-success mt-2 save-button" 
                        disabled>
                        Save
                    </button>
                </form>
                <!-- Form 4 -->
                <form class="change-form" action="changePassword" method="post">
                    <h4>Change Password</h4>
                    <input 
                        type="password" 
                        name="Opass" 
                        class="form-control mb-2 input-field" 
                        placeholder="Enter your old password" 
                        required>
                    <input 
                        type="text" 
                        name="Npass" 
                        class="form-control input-field" 
                        placeholder="Enter your new password" 
                        required>
                    <button 
                        type="submit" 
                        class="btn btn-success mt-2 save-button" 
                        disabled>
                        Save
                    </button>
                </form>
            
                <script>
                    // เลือกฟอร์มทั้งหมด
                    const forms = document.querySelectorAll('.change-form');

                    // วนลูปในแต่ละฟอร์ม
                    forms.forEach((form) => {
                        const inputs = form.querySelectorAll('.input-field');
                        const button = form.querySelector('.save-button');

                        // ตรวจสอบค่าใน input ทุกช่อง
                        const validateForm = () => {
                            const allFilled = Array.from(inputs).every(input => input.value.trim() !== '');
                            button.disabled = !allFilled;
                        };

                        // ติดตามการเปลี่ยนแปลงของ input
                        inputs.forEach((input) => {
                            input.addEventListener('input', validateForm);
                        });
                    });
                </script>

            <% } else { %>
                <h1 class="text-center">Welcome users</h1>
                <h4 class="text-center">Hello user, please <a href="/login">login</a> or <a href="/register">register</a> for more information.</h4>
            <% } %>
        </main>
    </div>
    
    <script src="/js/SweetAlert.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
</body>
</html>
